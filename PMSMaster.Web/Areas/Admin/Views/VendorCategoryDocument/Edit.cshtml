@model PMSMaster.Entity.Models.VendorCategoryDocument

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!---bredcrumb start-->
<div class="viewport-header">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb has-arrow">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                <a href="#">Manage Vendor Category Document</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Edit Vendor Category Document</li>
        </ol>
    </nav>
</div>
<!--breadcrumb end-->
<!--Body Data-->
<div class="row">
    <div class="col-12 pt-1 pb-4 d-flex justify-content-between align-items-center">
        <h4>Edit Vendor Category Document</h4>
        <a href="@Url.Action("Index", "VendorCategoryDocument", new { area="Admin"})" class="btn btn-blue  w-80 h-35"> <button class="btn btn-blue  w-80 h-35" data-toggle="modal" data-target="#termcondition">View All Category Document</button> </a>
    </div>
</div>
<!--table row-->
<div class="row">
    <div class="col-lg-12">
        <div class="grid">
            <div class="d-flex justify-content-between align-items-center grid-header mb-0">
                <p class="card-title">Edit Vendor Category Document</p>
            </div>
            <div class="grid-body pb-4">
                <div class="item-wrapper">
                    @using (Html.BeginForm("Edit", "VendorCategoryDocument", FormMethod.Post))
                    {
                        @Html.HiddenFor(m => m.Id)
                        <div class="row">
                          
                            <div class="form-group">
                                <label for="ParentCategoryId">Category:</label>
                                @Html.DropDownList("VendorCategoryId", new SelectList(ViewBag.Category, "Id", "Name"), "Select Category", new { @class = "form-control" })
                            </div>
                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                <label for="inputEmail1">Name</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
                                <span class="YError">@Html.ValidationMessageFor(x => x.Name)</span>
                            </div>
                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                <label for="inputEmail1">IsRequired</label>
                                <div class="form-inline">
                                    @Html.CheckBoxFor(x => x.IsRequired, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                <label for="inputEmail1">Active</label>
                                <div class="form-inline">
                                    @Html.CheckBoxFor(x => x.Status, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-sm btn-primary">Update</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

