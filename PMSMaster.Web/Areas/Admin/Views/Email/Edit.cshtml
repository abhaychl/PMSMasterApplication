@model PMSMaster.Entity.Models.Email

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!---bredcrumb start-->
<div class="viewport-header">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb has-arrow">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                <a href="#">Manage Email</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Edit Email</li>
        </ol>
    </nav>
</div>
<!--breadcrumb end-->
<!--Body Data-->
<div class="row">
    <div class="col-12 pt-1 pb-4 d-flex justify-content-between align-items-center"><h4>Edit Email</h4> 
        <a href="@Url.Action("Index", "Email", new { area="Admin"})" class="btn btn-blue  w-80 h-35"> <button class="btn btn-blue  w-80 h-35" data-toggle="modal" data-target="#termcondition">View All Email</button> </a>
    </div>
</div>
<!--table row-->
<div class="row">
    <div class="col-lg-12">
        <div class="grid">
            <div class="d-flex justify-content-between align-items-center grid-header mb-0">
                <p class="card-title">Edit Email</p>
            </div>
            <div class="grid-body pb-4">
                <div class="item-wrapper">
                    @using (Html.BeginForm("Edit", "Email", FormMethod.Post, new { id = "yourFormId" }))
                    {

                        @Html.HiddenFor(m => m.EmailId)

                        <div class="row">

                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                <label for="inputEmail1">Title</label>

                                @Html.TextBoxFor(x => x.Title, new { @class = "form-control", placeholder = "Title" })
                                <span class="YError">@Html.ValidationMessageFor(x => x.Title)</span>
                            </div>                            
                        </div>
                        <div class="row">
                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                <label for="inputEmail1">Description</label>

                                @* @Html.TextAreaFor(x => x.Description, new { @class = "form-control", placeholder = "Description" }) *@
                                @Html.TextAreaFor(x => x.Description, new { @class = "form-control", placeholder = "Description", id = "editor" })
                                <span class="YError">@Html.ValidationMessageFor(x => x.Description)</span>
                            </div>
                        </div>
                        
                        <div class="row">
                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                <label for="inputEmail1">Active</label>
                                <div class="form-inline">
                                    @Html.CheckBoxFor(x => x.Status, new { @class = "form-control" })
                                </div>
                            </div>
                        </div>

                        <button id="submitButton" type="button" class="btn btn-sm btn-primary">Update Email</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
    {
    <!-- CKEditor CDN CSS -->

    <script type="text/javascript">
        ClassicEditor
            .create(document.querySelector('#editor'))
            .catch(error => {
                console.error(error);
            });

        // Example using jQuery
        $('#submitButton').click(function () {
            // var editorContent = CKEDITOR.instances.editor.getData();
            // // Do something with editorContent
            // // Assign the JSON data to the hidden input field
            // $('#descriptionData').val(editorContent);
            // Submit the form
            $('#yourFormId').submit();
        });
    </script>
    }
