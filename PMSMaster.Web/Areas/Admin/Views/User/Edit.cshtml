@model PMSMaster.Entity.Models.Users

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!---bredcrumb start-->
<div class="viewport-header">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb has-arrow">
            <li class="breadcrumb-item">
                <a href="#">Dashboard</a>
            </li>
            <li class="breadcrumb-item">
                <a href="#">Manage User</a>
            </li>
            <li class="breadcrumb-item active" aria-current="page">Edit User</li>
        </ol>
    </nav>
</div>
<!--breadcrumb end-->
<!--Body Data-->
<div class="row">
    <div class="col-12 pt-1 pb-4 d-flex justify-content-between align-items-center"><h4>Edit User</h4> <a href="@Url.Action("Index", "User", new { area="Admin"})" class="btn btn-blue  w-80 h-35"> <button class="btn btn-blue  w-80 h-35" data-toggle="modal" data-target="#termcondition">View All User</button> </a></div>
</div>
<!--table row-->
<div class="row">
    <div class="col-lg-12">
        <div class="grid">
            <div class="d-flex justify-content-between align-items-center grid-header mb-0">
                <p class="card-title">Edit User</p>
            </div>
            <div class="grid-body pb-4">
                <div class="item-wrapper">
                    @using (Html.BeginForm("Edit", "User", FormMethod.Post))
                    {
                        @Html.HiddenFor(m => m.UserId)

                        <div class="row">
                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                <label for="inputEmail1">User Name</label>
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Name" })
                                <span class="YError">@Html.ValidationMessageFor(x => x.Name)</span>
                            </div>

                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                <label for="inputEmail1">Email id</label>
                                @Html.TextBoxFor(x => x.LoginId, new { @class = "form-control", placeholder = "Email Id" })
                                <span class="YError">@Html.ValidationMessageFor(x => x.LoginId)</span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                <label for="inputEmail1">Password</label>
                                @Html.TextBoxFor(x => x.password, new { @class = "form-control", placeholder = "Password" })
                                <span class="YError">@Html.ValidationMessageFor(x => x.password)</span>
                            </div>
                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                <label for="inputEmail1">Employee Code</label>
                                @Html.TextBoxFor(x => x.EmployeeCode, new { @class = "form-control", placeholder = "Employee Code" })
                                <span class="YError">@Html.ValidationMessageFor(x => x.EmployeeCode)</span>
                            </div>

                        </div>

                        <div class="row">

                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                <label for="inputEmail1">Phone no</label>
                                @Html.TextBoxFor(x => x.PhoneNo, new { @class = "form-control", placeholder = "Phone no" })
                                <span class="YError">@Html.ValidationMessageFor(x => x.PhoneNo)</span>
                            </div>

                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                <label for="inputEmail1">Department</label>
                                @Html.DropDownListFor(x => x.DepartmentId, new SelectList(ViewBag.AllDepartments, "DepartmentId", "Name"), "Select Department", new { @class = "form-control" })
                                <span class="YError">@Html.ValidationMessageFor(x => x.DepartmentId)</span>
                            </div>

                        </div>
                        <div class="row">

                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                <label for="inputEmail1">User vertical</label>
                                @Html.DropDownListFor(x => x.UserVerticalId, new SelectList(ViewBag.AllUserVerticals, "UserVerticalId", "Name"), "Select Vertical", new { @class = "form-control" })
                                <span class="YError">@Html.ValidationMessageFor(x => x.UserVerticalId)</span>
                            </div>

                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                <label for="inputEmail1">Office location</label>

                                @Html.DropDownListFor(x => x.OfficeLocationId, new SelectList(ViewBag.AllOfficeLocation, "OfficeLocationId", "Name"), "Select Office location", new { @class = "form-control" })
                                <span class="YError">@Html.ValidationMessageFor(x => x.OfficeLocationId)</span>
                            </div>

                        </div>
                        <div class="row">

                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                <label for="inputEmail1">User Role</label>

                                @Html.DropDownListFor(x => x.RoleId, new SelectList(ViewBag.AllRole, "RoleId", "Name"), "Select Role", new { @class = "form-control" })

                                <span class="YError">@Html.ValidationMessageFor(x => x.RoleId)</span>
                            </div>

                            <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                <label for="inputEmail1">Target Amount</label>
                                @Html.TextBoxFor(x => x.TargetAmount, new { @class = "form-control", placeholder = "Target Amount" })
                                <span class="YError">@Html.ValidationMessageFor(x => x.TargetAmount)</span>
                            </div>

                        </div>

                        <div class="row">

                            <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                <label for="inputEmail1">Active</label>
                                <div class="form-inline">
                                    @Html.CheckBoxFor(x => x.Status, new { @class = "form-control" })
                                </div>
                            </div>

                        </div>


                        <button type="submit" class="btn btn-sm btn-primary">Update</button>

                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!---Body Data end-->
